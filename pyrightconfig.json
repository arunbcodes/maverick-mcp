{
  "include": [
    "packages/*/src/**/*.py"
  ],
  "exclude": [
    "**/node_modules",
    "**/__pycache__",
    ".venv",
    "site"
  ],
  "reportMissingImports": "warning",
  "reportMissingModuleSource": "warning",
  "reportMissingTypeStubs": "warning",
  "pythonVersion": "3.12",
  "typeCheckingMode": "standard",
  "executionEnvironments": [
    {
      "root": ".",
      "pythonVersion": "3.12",
      "extraPaths": [
        "packages/schemas/src",
        "packages/core/src",
        "packages/data/src",
        "packages/services/src",
        "packages/capabilities/src",
        "packages/server/src",
        "packages/api/src",
        "packages/backtest/src",
        "packages/india/src",
        "packages/agents/src",
        "packages/crypto/src"
      ]
    }
  ]
}
